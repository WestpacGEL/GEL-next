{
  "name": "@westpac/style-config",
  "version": "0.1.0-canary.3",
  "type": "module",
  "exports": {
    ".": "./dist/tokens/index.js",
    "./tailwind": "./dist/css/styles.css",
    "./themes/*": "./dist/css/themes/theme-*.css",
    "./postcss": "./postcss.config.js",
    "./tokens": "./dist/tokens/index.js",
    "./constants": "./dist/constants/index.js"
  },
  "devDependencies": {
    "fs-extra": "~11.3.2",
    "handlebars": "~4.7.8",
    "postcss": "^8.5.3",
    "style-dictionary": "~5.0.4",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build:style-dictionary": "node ./utils/transformers/style-dictionary.cjs",
    "build:css": "node ./utils/transformers/css.cjs",
    "build:css:copy": "cp -a ./src/css ./dist/",
    "build:ts": "tsc",
    "build": "pnpm clean && pnpm build:style-dictionary && pnpm build:css && pnpm build:ts && pnpm build:css:copy"
  }
}
