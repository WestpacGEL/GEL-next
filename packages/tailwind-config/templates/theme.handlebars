@custom-variant {{brand}} (&:where([data-brand={{brand}}], [data-brand={{brand}}] *));

@layer theme {
  :root,
  :host {
    [data-brand="{{brand}}"] {
      /* Primitive Colors */
      {{#each primitiveColors}}
      --{{@key}}: {{this}};
      {{/each}}

      /* Theme Colors */
      {{#each themeColors}}
      --{{@key}}: {{this}};
      {{/each}}
    }
  }
}